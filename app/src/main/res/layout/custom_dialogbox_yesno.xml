<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
            android:id="@+id/card_error_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_16dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_24dp">

                <TextView
                        android:id="@+id/tv_dialog_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:text="Wait!"
                        android:textSize="@dimen/_20sp"/>

                <TextView
                        android:lineSpacingMultiplier="0.9"
                        android:id="@+id/tv_dialog_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8dp"
                        android:fontFamily="@font/medium"
                        android:text="Are you sure you want to Logout from the app??"
                        android:textAlignment="viewStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sp"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_24dp"
                        android:layout_marginBottom="10dp">

                    <LinearLayout
                            android:id="@+id/btn_no"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_margin="@dimen/_6dp"
                            android:layout_weight="1"
                            android:background="@drawable/error_dialog_view_card_background"
                            android:gravity="center">

                        <TextView
                                android:id="@+id/btn_negative"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/medium"
                                android:text="No"
                                android:textAllCaps="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14sp"/>
                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/btn_yes"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_6dp"
                            android:layout_weight="1"
                            android:background="@drawable/error_dialog_view_card_background"
                            android:backgroundTint="@color/flamingo"
                            android:gravity="center">

                        <TextView
                                android:id="@+id/btn_positive"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/medium"
                                android:text="Yes"
                                android:textAllCaps="true"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_14sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>