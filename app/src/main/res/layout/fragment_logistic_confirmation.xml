<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutRideConfirmation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_dialog_light"
    android:orientation="vertical"
    android:padding="@dimen/_24dp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="@dimen/_80dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <TextView
        android:id="@+id/tvDistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/boldextra"
        android:text="0 km"
        android:textSize="@dimen/_22sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:text="Total Distance"
        android:textSize="@dimen/_12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:layout_marginTop="@dimen/_10dp"
        android:alpha="0.1"
        android:background="@color/black" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp">

        <ImageView
            android:id="@+id/pickUpImg"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_40dp"
            android:src="@drawable/ic_map_marker" />

        <LinearLayout
            android:paddingStart="@dimen/_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/pickUpImg"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="Pick Up Location"
                android:textSize="@dimen/_16sp" />

            <TextView
                android:id="@+id/tvPickupLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semibold"
                android:text="Rs.400"
                android:textSize="@dimen/_14sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp">

        <ImageView
            android:id="@+id/destinationImg"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_40dp"
            android:src="@drawable/ic_map_marker" />

        <LinearLayout
            android:paddingStart="@dimen/_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/destinationImg"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="Destination Location"
                android:textSize="@dimen/_16sp" />

            <TextView
                android:id="@+id/tvDestinationLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semibold"
                android:text="Rs.400"
                android:textSize="@dimen/_14sp" />
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_44dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/_28dp"
        android:layout_marginEnd="@dimen/_8dp"
        android:layout_toStartOf="@+id/addImage"
        android:background="@drawable/button_round_1"
        android:fontFamily="@font/semibold"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sp" />
</LinearLayout>