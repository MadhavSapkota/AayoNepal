<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_4dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/gridItem"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/_12dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2dp"
        app:cardElevation="0dp"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageGrid"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/graybackground"
                android:scaleType="centerCrop"
                android:src="@color/graybackground" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iconRestaurant"
                android:layout_width="@dimen/_28dp"
                android:layout_height="@dimen/_28dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageGrid"
                android:gravity="start"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_16dp"
                android:paddingTop="@dimen/_12dp"
                android:paddingRight="@dimen/_16dp"
                android:paddingBottom="@dimen/_12dp">

                <TextView
                    android:id="@+id/gridHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_3dp"
                    android:baselineAligned="false"
                    android:fontFamily="@font/bold"
                    android:maxLines="2"
                    android:text="asdasdasdadad"
                    android:textSize="@dimen/_16sp" />

                <TextView
                    android:paddingBottom="@dimen/_8dp"
                    android:id="@+id/gridCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:maxLines="1"
                    android:text="asdadadsd"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_12sp" />

            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>