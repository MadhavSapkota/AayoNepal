<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layoutSetOnMap"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_dialog_light"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_16dp"
    android:paddingTop="@dimen/_20dp"
    android:paddingRight="@dimen/_16dp">


    <RelativeLayout
        android:id="@+id/layoutSearchDestination"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_44dp"
        android:layout_marginTop="@dimen/_8dp"
        android:background="@drawable/bg_rounded_grey"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mapImage"
            android:layout_width="@dimen/_20dp"
            android:layout_height="@dimen/_20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_16dp"
            android:src="@drawable/ic_map_marker"
            app:tint="@color/flamingo" />

        <TextView
            android:id="@+id/tvSearchDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/imgSearch"
            android:layout_toRightOf="@+id/mapImage"
            android:backgroundTint="@color/transparent"
            android:fontFamily="@font/medium"
            android:hint="Search destination"
            android:maxLines="1"
            android:padding="@dimen/_10dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/_16sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imgSearch"
            android:layout_width="@dimen/_20dp"
            android:layout_height="@dimen/_20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_16dp"
            android:alpha="0.5"
            android:src="@drawable/ic_search" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/_16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btnConfirmDestination"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_8dp"
            android:layout_marginBottom="@dimen/_24dp"
            android:layout_toStartOf="@+id/addImage"
            android:background="@drawable/button_round_1"
            android:fontFamily="@font/semibold"
            android:text="Confirm Destination"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <ImageView
            android:padding="@dimen/_8dp"
            android:background="@drawable/circle_bg"
            android:id="@+id/addImage"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_40dp"
            android:src="@drawable/ic_add"
            app:tint="@color/black" />

    </RelativeLayout>


</LinearLayout>