<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/gridItem"
        android:padding="@dimen/_16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_6dp"
            android:background="@color/graybackground"
            android:scaleType="fitCenter"
            android:src="@color/graybackground"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageGrid"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notificationHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="asdasdasdadad"
                android:textSize="@dimen/_16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6dp"
                android:paddingBottom="@dimen/_6dp">

                <TextView
                    android:id="@+id/notificationDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:fontFamily="@font/regular"
                    android:text="1 day ago"
                    android:textColor="@color/flamingo"
                    android:textSize="@dimen/_12sp" />

                <TextView
                    android:id="@+id/notificationType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/regular"
                    android:text="General"
                    android:textColor="@color/green" />

            </RelativeLayout>

            <TextView
                android:id="@+id/notificationContext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="asdadadsd"
                android:textSize="@dimen/_14sp" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_below="@id/gridItem"
        android:background="@color/gray"
        android:layout_margin="@dimen/dimen_5dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</RelativeLayout>