<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_24dp"
    android:paddingRight="@dimen/_24dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_16dp"
        android:paddingBottom="@dimen/_16dp">

        <LinearLayout
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_40dp"
            android:background="@drawable/rounded_red_5p"
            android:gravity="center_vertical|center_horizontal">
            <ImageView
                android:id="@+id/imgItem"
                android:layout_width="@dimen/_24dp"
                android:layout_height="@dimen/_24dp"
                android:src="@drawable/about_app"
                app:tint="@color/flamingo" />
        </LinearLayout>

        <TextView
            android:id="@+id/tVItem"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8dp"
            android:fontFamily="@font/manrope_medium"
            android:text="My Favourites"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sp" />

        <ImageView
            android:id="@+id/arrow_angle_right"
            android:layout_width="@dimen/_16dp"
            android:layout_height="@dimen/_16dp"
            android:src="@drawable/arrow_angle_right" />


    </LinearLayout>

</LinearLayout>